/* Pages/feedback/feedback.wxss */

/*导航栏
--------------------------*/
.navbar{

  height: 32pt;
  width: 100%;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.navbar__menu-btn-sec {
display: flex;
height: 32pt;
width: 32pt;
padding-left: 5pt;
align-items: center;
justify-content: center;
margin-top: 3pt;
}

.navbar__menu-icon {
font-size: 18px;
}
.navbar__title-sec{
display: flex;
align-items: center;
height: 32pt;
width: fit-content;
margin-top: 3pt;
}
.navbar__title-text{
font-weight: bold;
}

.feedback{
  position: relative;
  height: 20%;
  top: 3%;
  width: 710rpx;
  border: 20rpx solid #FFFFFF;
  background-color: #FFFFFF;
  
}
.email{
  height: 90rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  top: 6%;
}
.email-title{
  color: #101010;
  background-color: #FFFFFF;
  height: 90rpx;
  width: 20%;
  line-height: 90rpx;
  font-size: 30rpx;
  font-family: Arial;
  text-align: center;
}
.email-input{
  height: 70rpx;
  width:80%;
  padding:10rpx 20rpx 10rpx 20rpx;
  background-color: #FFFFFF;
}
.feedback-placeholder{
  color: rgba(170, 170, 170, 1);
  font-size: 30rpx;
  font-family: Arial;
}
button{
  position: relative;
  width: 80%;
  top:10%;
}